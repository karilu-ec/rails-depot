<h2>Your Cart</h2>
<table>
  <% if cart.line_items %>
  <%= render(cart.line_items) %>
  <% end %>
<tr class="total_line">
  <td colspan="2">Total</td>
  <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
</tr>
</table>
<%= button_to "Checkout", new_order_path, method: :get unless @checkout  %>
<%= button_to 'Empty Cart', cart, method: :delete, remote:true %>
